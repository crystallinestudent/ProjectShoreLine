{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

    <section class="12u$ loop-excerpt">
        <div class="post-container">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
            <p class="post-meta">Posted by {{author}} on <time class="blog-date" datetime="{{date format='MMMM DD, YYYY'}}">{{date format="MMMM DD, YYYY"}}</time></p>
            {{>share}}
        </header>
        <hr class="minor" />
        {{#if image}}<a href="{{url}}" class="feature-image"><img src="{{image}}" /></a>{{/if}}
        <article class="post-content">
            <p>{{excerpt words="60"}}...</p>
        </article>
        <a href="{{url}}" class="read-more">Read More Â»</a>
        </div>
    </section>
{{/foreach}}

<div class="12u">
    {{! Previous/next page links - displayed on every page }}
    {{pagination}}
</div>
