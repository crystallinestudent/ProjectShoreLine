<!-- Alternate Intro for Posts -->
{{>header/header-alt}}
<section id="post-header-wrapper" class="container">
    <div class="row uniform">
        <div class="post-container 12u$">
            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
                <p class="post-meta">Posted by {{author}} on <time class="blog-date" datetime="{{date format='MMMM DD, YYYY'}}">{{date format="MMMM DD, YYYY"}}</time></p>
                {{>share}}
            </header>
            <hr class="minor" />
            {{#if image}}<a href="{{url}}" class="feature-image"><img src="{{image}}" /></a>{{/if}}
        </div>
    </div>
</section>
