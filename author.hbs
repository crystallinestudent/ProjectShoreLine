{{!< default}}

{{>intro/intro-page}}

<section id="main" class="container">
{{#author}}
<div class="row 200% uniform">
    <div class="12u">
        {{#if image}}
        <figure class="author-image 12u">
            <img src="{{image}}" alt="" />
        </figure>
        {{/if}}
        <div class="author-meta 12u">
            <h2 class="author-title">{{name}}</h2>
            <p class="author-meta">
                {{#if location}}<strong>Location: </strong>{{location}}<br/>{{/if}}
                {{#if website}}<strong>Website: </strong><a href="{{website}}">{{website}}</a><br/>{{/if}}
            </p>
            <p class="author-bio">{{bio}}</p>
            <p>{{plural ../pagination.total empty='No posts...yet' singular='I have posted <strong>%</strong> story.' plural='I have posted <strong>%</strong> stories.'}}</p>
        </div>
    </div>
</div>
{{/author}}

{{! The main content area on the homepage }}
    <div class="row 200% uniform post-loop">
        {{! The tag below includes the post loop - partials/loop.hbs }}
        {{> "loop"}}
    </div>
</section>
